
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h1>Lista de Contas a Receber</h1>
    </div>
    <a href="contaReceber/cadastro">Nova Conta a Receber</a>
    <form action="/contaReceber/index" method="get">
        <label for="campo-pesquisa">Pesquisa</label>
        <input type="text" name="pesquisa" id="campo-pesquisa" />
    </form>
    <div>
        <table class="tabela">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Valor</th>
                    <th>Tipo</th>
                    <th>Descrição</th>
                    <th>Status</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < ViewBag.ContasReceber.Count; i++)
                {
                    <tr>
                        <td>@ViewBag.ContasReceber[i].Id</td>
                        <td>@ViewBag.ContasReceber[i].Nome</td>
                        <td>@ViewBag.ContasReceber[i].Valor</td>
                        <td>@ViewBag.ContasReceber[i].Tipo</td>
                        <td>@ViewBag.ContasReceber[i].Descricao</td>
                        <td>@ViewBag.ContasReceber[i].Status</td>
                        <td>
                            <a href="/contaReceber/editar?id=@ViewBag.ContasReceber[i].Id">Editar</a>
                            <a href="/contaReceber/apagar?id=@ViewBag.ContasReceber[i].Id">Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
